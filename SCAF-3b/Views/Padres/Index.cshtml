@model IEnumerable<SCAF.Models.Padre>

@{

}

<div class="container my-4">
    <h2 class="mb-4 text-center text-primary">Listado de Padres</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">+ Nuevo Padre</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header" style="background-color: #ff9800; color: #fff; font-weight: bold;">
            Padres Registrados
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr style="background-color: #FFD700; color: #003366;">
                        <th>Nombre Completo</th>
                        <th>Documento</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var padre in Model)
                        {
                            <tr>
                                <td>@padre.NombreCompleto</td>
                                <td>@padre.DocumentoIdentidad</td>
                                <td>@padre.Telefono</td>
                                <td>@padre.Correo</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@padre.IdPadre" class="btn btn-sm btn-edit">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@padre.IdPadre" class="btn btn-sm btn-delete">Eliminar</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No hay padres registrados</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
