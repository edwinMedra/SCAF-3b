    .navbar-brand, .nav-link, .navbar-text {
        color: #fff !important;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        background-color: #ff9800; /* Naranja */
        color: #fff;
        font-weight: bold;
    }

    .stat-card {
        background-color: #fff;
