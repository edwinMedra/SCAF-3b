<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCAF_3b</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SCAF_3b.styles.css" asp-append-version="true" />
</head>
<body>

    @{
        var currentRoute = ViewData["CurrentRoute"] as string;
    }

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #003366;">
        <!-- Azul -->
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/Home/Index">SCAF</a> <!-- Blanco -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Dashboard -->
                    <li class="nav-item"")">
                        <a class="nav-link text-warning" href="/Home/Index">Panel Principal</a> <!-- Amarillo -->
                    </li>

                    <!-- Gestión de Padres -->
                    <li class="nav-item")">
                        <a class="nav-link text-warning" href="/Padres/Index">Padres</a> <!-- Amarillo -->
                    </li>

                    <!-- Gestión de Alumnos -->
                    <li class="nav-item")">
                        <a class="nav-link text-warning" href="/Alumnos/Index">Alumnos</a> <!-- Amarillo -->
                    </li>

                    <!-- Gestión de Eventos -->
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="/Home/Eventos">Eventos</a> <!-- Amarillo -->
                    </li>

                    <!-- Registro de Asistencias -->
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="/Home/Asistencias">Asistencias</a> <!-- Amarillo -->
                    </li>

                    <!-- Reportes -->
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="/Home/Reportes">Reportes</a> <!-- Amarillo -->
                    </li>
                </ul>

                <!-- Barra de usuario y logout -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Bienvenido, Usuario</a> <!-- Blanco -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Logout">Cerrar sesión</a> <!-- Blanco -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Login">Iniciar Sesión</a> <!-- Blanco -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Perfil">Perfil</a> <!-- Blanco -->
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SCAF_3b - <a asp-area=""  asp-action="creditos">Creditos</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
