@model IEnumerable<SCAF.Models.Alumno>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Alumnos";
}

<div class="container my-4">
    <h2 class="mb-4 text-center text-primary">Listado de Alumnos</h2>

    <!-- Botón crear alumno -->
    <div class="mb-3 text-end">
        <a href="/Alumnos/Create" class="btn btn-custom">+ Nuevo Alumno</a>
    </div>

    <!-- Tabla de alumnos -->
    <div class="card shadow-sm">
        <div class="card-header" style="background-color: #ff9800; color: #fff; font-weight: bold;">
            Alumnos Registrados
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Carnet</th>
                        <th>Nombre Completo</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Nivel Actual</th>
                        <th>Año Lectivo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var alumno in Model)
                    {
                        <tr>
                            <td>@alumno.Carnet</td>
                            <td>@alumno.NombreCompleto</td>
                            <td>@alumno.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                            <td>@alumno.NivelActual</td>
                            <td>@alumno.AnioLectivo</td>
                            <td>
                                <a href="/Alumnos/Edit/@alumno.IdAlumno" class="btn btn-sm btn-edit">Editar</a>
                                <a href="/Alumnos/Delete/@alumno.IdAlumno" class="btn btn-sm btn-delete">Eliminar</a>
                                <a href="/Alumnos/@alumno.IdAlumno/Historial" class="btn btn-sm btn-history">Historial</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .btn-edit {
        background-color: #0d47a1;
        color: #fff;
    }

        .btn-edit:hover {
            background-color: #08306b;
        }

    .btn-delete {
        background-color: #ff5722;
        color: #fff;
    }

        .btn-delete:hover {
            background-color: #e64a19;
        }

    .btn-history {
        background-color: #ff9800;
        color: #fff;
    }

        .btn-history:hover {
            background-color: #e68900;
        }

    .btn-custom {
        background-color: #FFD700;
        color: #003366;
        border: none;
    }

        .btn-custom:hover {
            background-color: #FFC107;
        }
</style>
