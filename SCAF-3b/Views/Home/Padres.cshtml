
@{
    // pagina de padres
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SCAF - Padres</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #0d47a1; /* Azul principal */
        }

        .navbar-brand, .nav-link, .navbar-text {
            color: #fff !important;
        }

        .card-header {
            background-color: #ff9800; /* Naranja */
            color: #fff;
            font-weight: bold;
        }

        .btn-edit {
            background-color: #0d47a1;
            color: #fff;
        }

            .btn-edit:hover {
                background-color: #08306b;
            }

        .btn-delete {
            background-color: #ff5722;
            color: #fff;
        }

            .btn-delete:hover {
                background-color: #e64a19;
            }
    </style>
</head>
<body>
 

    <div class="container my-4">
        <h2 class="mb-4 text-center">Listado de Padres</h2>

        <!-- Botón crear padre -->
        <div class="mb-3 text-end">
            <a href="/padres/crear" class="btn btn-custom">+ Nuevo Padre</a>
        </div>

        <!-- Tabla de padres -->
        <div class="card shadow-sm">
            <div class="card-header">Padres Registrados</div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Documento</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Juan Pérez</td>
                            <td>01234567-8</td>
                            <td>+503 1234-5678</td>
                            <td>juan.perez@mail.com</td>
                            <td>
                                <a href="/padres/editar/1" class="btn btn-sm btn-edit">Editar</a>
                                <a href="/padres/eliminar/1" class="btn btn-sm btn-delete">Eliminar</a>
                                <a href="/padres/1/hijos" class="btn btn-sm btn-custom">Hijos</a>
                            </td>
                        </tr>
                        <tr>
                            <td>María López</td>
                            <td>98765432-1</td>
                            <td>+503 8765-4321</td>
                            <td>maria.lopez@mail.com</td>
                            <td>
                                <a href="/padres/editar/2" class="btn btn-sm btn-edit">Editar</a>
                                <a href="/padres/eliminar/2" class="btn btn-sm btn-delete">Eliminar</a>
                                <a href="/padres/2/hijos" class="btn btn-sm btn-custom">Hijos</a>
                            </td>
                        </tr>
                        <!-- Más filas dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

