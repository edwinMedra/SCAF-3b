<div class="container mt-4">
    <h2 class="text-primary mb-4">Reportes de Asistencia</h2>

    <!-- Filtros -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <form class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold text-secondary">Evento</label>
                    <select class="form-select border-primary">
                        <option selected disabled>Seleccione un evento</option>
                        <option value="1">Acto Cívico - 15/09/2025</option>
                        <option value="2">Reunión de Padres - 20/10/2025</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary">Fecha</label>
                    <input type="date" class="form-control border-primary">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary">Estado</label>
                    <select class="form-select border-warning">
                        <option value="" selected>Todos</option>
                        <option value="presente">Presente</option>
                        <option value="ausente">Ausente</option>
                        <option value="justificado">Justificado</option>
                    </select>
                </div>
                <div class="col-md-2 text-end">
                    <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de resultados -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Padre</th>
                            <th>Alumno</th>
                            <th>Evento</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Juan Pérez</td>
                            <td>Carlos Pérez</td>
                            <td>Acto Cívico</td>
                            <td>15/09/2025</td>
                            <td class="text-success">Presente</td>
                        </tr>
                        <tr>
                            <td>María López</td>
                            <td>Andrea López</td>
                            <td>Reunión de Padres</td>
                            <td>20/10/2025</td>
                            <td class="text-danger">Ausente</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Botones de exportación -->
            <div class="text-end mt-3">
                <button class="btn btn-warning text-white me-2">Exportar a Excel</button>
                <button class="btn btn-primary">Exportar a PDF</button>
            </div>
        </div>
    </div>
</div>
