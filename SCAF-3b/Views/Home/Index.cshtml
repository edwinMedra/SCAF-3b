@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SCAF - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #0d47a1; /* Azul principal */
        }
        .navbar-brand, .nav-link, .navbar-text {
            color: #fff !important;
        }
        .card {
            border-radius: 15px;
        }
        .card-header {
            background-color: #ff9800; /* Naranja */
            color: #fff;
            font-weight: bold;
        }
        .stat-card {
            background-color: #fff;
            border-left: 5px solid #0d47a1;
        }
        .btn-custom {
            background-color: #0d47a1;
            color: #fff;
        }
        .btn-custom:hover {
            background-color: #08306b;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">SCAF</a>
            <div class="ms-auto navbar-text">Bienvenido, Usuario</div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container my-4">
        <h2 class="mb-4 text-center">Panel de Control</h2>

        <!-- Estadísticas rápidas -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Alumnos</h5>
                        <h3>250</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Padres</h5>
                        <h3>180</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Eventos</h5>
                        <h3>12</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">% Asistencia</h5>
                        <h3>85%</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Próximos eventos y accesos rápidos -->
        <div class="row g-4">
            <!-- Próximos eventos -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header">Próximos Eventos</div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">Reunión General - 10/09/2025</li>
                            <li class="list-group-item">Feria de Ciencias - 20/09/2025</li>
                            <li class="list-group-item">Acto Cívico - 30/09/2025</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Accesos rápidos -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header">Accesos Rápidos</div>
                    <div class="card-body d-grid gap-2">
                        <a href="/asistencias" class="btn btn-custom">Registrar Asistencia</a>
                        <a href="/eventos/crear" class="btn btn-custom">Crear Evento</a>
                        <a href="/reportes" class="btn btn-custom">Ver Reportes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
