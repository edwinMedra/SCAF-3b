<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3" style="max-width: 600px; margin: auto; background-color: #ffffff;">

        <!-- Encabezado -->
        <div class="card-header text-center" style="background-color: #003366; color: white;">
            <h3>👤 Mi Perfil</h3>
        </div>

        <!-- Cuerpo -->
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <img src="~/images/profile.png" alt="Foto de perfil" class="rounded-circle border border-3" width="120" height="120" />
                <h5 class="mt-3 text-dark">Nombre del Usuario</h5>
                <p class="text-muted">Correo: usuario@correo.com</p>
            </div>

            <form>
                <div class="mb-3">
                    <label class="form-label text-dark fw-bold">Nombre completo</label>
                    <input type="text" class="form-control border border-2" style="border-color:#FFD700;" placeholder="Escribe tu nombre">
                </div>

                <div class="mb-3">
                    <label class="form-label text-dark fw-bold">Correo electrónico</label>
                    <input type="email" class="form-control border border-2" style="border-color:#FFD700;" placeholder="usuario@correo.com">
                </div>

                <div class="mb-3">
                    <label class="form-label text-dark fw-bold">Contraseña</label>
                    <input type="password" class="form-control border border-2" style="border-color:#FFD700;" placeholder="******">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn fw-bold" style="background-color:#FFD700; color:#003366;">
                        💾 Guardar cambios
                    </button>
                    <button type="reset" class="btn fw-bold" style="background-color:#003366; color:white;">
                        ❌ Cancelar
                    </button>
                </div>
            </form>
        </div>

        <!-- Pie -->
        <div class="card-footer text-center" style="background-color: #FFD700; color: #003366;">
            Última actualización: 25/08/2025
        </div>
    </div>
</div>
